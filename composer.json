{
    "name": "quandaso/phpqlib",
    "type": "library",
    "description": "Simple PHP library",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "QuanTran",
            "email": "quantm.tb@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": { "Q\\": "src/Q" },
        "files": ["src/functions.php"],
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    }
}
